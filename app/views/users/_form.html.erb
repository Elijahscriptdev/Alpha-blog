<%= render "shared/errors", obj: @user %>

<div class="row mt-4 p-5">
<div class="col">
<%= form_for @user do |f| %>
    <div class="form-group row">
    <div class="control-label col-sm-2 ">
        <%= f.label :username %> 
    </div>
    <div class="col-sm-8">
        <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
    </div>
    </div>

    <div class="form-group row">
    <div class="control-label col-sm-2">
        <%= f.label :email %>
    </div>
    <div class="col-sm-8">
        <%= f.email_field :email, class: "form-control", placeholder: "Enter email", autofocus: true %>
    </div>
    </div>

    <div class="form-group row">
    <div class="control-label col-sm-2">
        <%= f.label :password %>
    </div>
    <div class="col-sm-8">
        <%= f.password_field :password, class: "form-control", placeholder: "Enter password", autofocus: true %>
    </div>
    </div>

    <div class="form-group row py-2 text-center">
    <div class="col-sm-10 mx-5">
        <%= f.submit(@user.new_record? ? "Sign up" : "Update Account", class: "btn btn-secondary ") %>
        <%= link_to "Go Back to Articles", articles_path, class: "btn btn-secondary " %>
    </div>
    </div>

<% end %>
</div>
</div> 
