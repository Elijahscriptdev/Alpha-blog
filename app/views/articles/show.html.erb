
 <h2 class="text-center">Title: <%= @article.title %></h2>
<div class="well ">
    <h4 class="text-center description"><strong>Description:</strong><h4>
    <hr>
    <%= simple_format(@article.description) %>
    <hr>
    <div class="article-actions">
        <%= link_to "Edit this Article", edit_article_path(@article), class: "btn btn-primary" %>
        <%= link_to "Delete this Article", article_path(@article), method: :delete,
                                           data: { confirm: "Are you sure you want to delete this article?"},
                                           class: "btn btn-danger" %>
        <%= link_to "View Articles", articles_path, class: "btn btn-secondary" %>
</div> 
